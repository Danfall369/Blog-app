<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

  <div class='header'>
    <% if user_signed_in? %>
      <%= button_to current_user.name, user_path(current_user), method: :get, class: "btn-header" %>
      <%= button_to 'Edit Profile', edit_user_registration_path, method: :get, class: "btn-header" %>
      <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: "btn-header" %>
      <% end %>
  </div>

  <div class='header-alerts' >
    <p class='notice' ><%= notice %></p>
    <p class='alert' ><%= alert %></p>
  </div>
    
    <%= yield %>
  </body>
</html>
