<div class="Posts-section">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <div class="Post-item">
        <h3><%= link_to post.title, user_post_path(user_id: post.author_id, id: post.id) %></h3>
        <p><%= post.text %></p>
        <p>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
        <%= render_comments_section(post) %>
      </div>
    <% end %>
  <% else %>
    <p>No posts found.</p>
  <% end %>
</div>
