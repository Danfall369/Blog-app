<html>
  <head>
    <%= stylesheet_link_tag 'posts_style' %>
  </head>
  <body>
    <%= render 'shared/user_card', user: @user %>
    
    <div class='notice'>
      <%= notice %>
    </div>

    <%= render 'posts_display' %>

    <div class='buttons'>
      <%= button_to "Go Back", user_path(@user), method: :get, class: "btn btn-primary" %>
      <%= button_to 'New Post', new_user_post_path, method: :get, class: 'btn btn-primary' %>
    </div>
  </body>
</html>
