<div class="New-post-form">
  <h1>New Post</h1>
  <%= form_with(model: @post, url: user_posts_path(current_user)) do |form| %>
    <div class="Form-field">
      <%= form.label :title %>
      <%= form.text_field :title, class: "Form-input" %>
    </div>

    <div class="Form-field">
      <%= form.label :content %>
      <%= form.text_area :text, rows: 6, class: "Form-textarea" %>
    </div>

    <%= form.submit "Create Post", class: "Submit-button" %>
  <% end %>
</div>

<%= button_to "Go Back", user_posts_path(current_user), method: :get, class: "Go-back-button" %>
