<div class="users-container">
  <% if @user %>
    <div class="user-box">
      <img src="<%= @user.photo %>" alt="userPhoto" class="photo">
      <div class="user-details">
        <h2 class="user-name"><%= @user.name %></h2>
        <p class="user-posts-counter">Number of posts: <%= @user.posts_counter %></p>
      </div>
    </div>
  <% else %>
    <p>User not found.</p>
  <% end %>
</div>
