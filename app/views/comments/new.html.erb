<div class="New-comment-form">
  <h1>New Comment</h1>
  <%= form_with(model: [current_user, Comment.new], url: create_comment_path(current_user), local: true) do |form| %>
    <div class="Form-field">
      <%= form.label :text %>
      <%= form.text_area :text, rows: 4, class: "Form-textarea" %>
    </div>

    <%= form.submit 'Add Comment', class: "Submit-button" %>
  <% end %>
</div>

<%= button_to "Go Back", user_post_path(current_user), method: :get, class: "Go-back-button" %>
